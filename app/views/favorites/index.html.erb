<!--いいね一覧を表示-->
<div class="topic-index-wrapper">
  <div class="container">
    <% @favorite_topics.each do |topic| %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <div class="topic-index-single">
            <h2 class="topic-author">
              <%= topic.user.name %>
            </h2>
            <%= image_tag topic.image.url %>
            <!--いいねがされている場合、ハートを表示する-->
            <!--include? 文字列や配列の要素に含まれる文字列に対して指定した文字列が存在するか確認する-->
            <% if topic.favorite_users.include?(current_user) %>
              <!--pathの引数にシンボルを与えることで、link_toにパラメーターを渡すことができる-->
              <!--params[:topic_id]にtopic.idが入る-->
              <%= link_to favorites_path(topic_id: topic.id), method: :delete do %>
                <%= image_tag 'icons/heart.png', class: 'topic-index-icon-red' %>
              <% end %>
                <%= topic.favorite_users.count %>
            <% end %>
            <!--コメントできる画面へ移動-->
            <%= link_to new_topic_comment_path(topic), method: :get do %>
              <%= image_tag 'icons/comment.png', class: 'topic-index-icon' %>
            <% end %>
            <p class="topic-text">
              <%= topic.description %>
            </p>
            <h3>コメント</h3>
            <!--アソシエーションでコメントを表示-->
            <% topic.comments.each do |comment| %>
              <p class="topic-text"><%= comment.content %></p>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>



