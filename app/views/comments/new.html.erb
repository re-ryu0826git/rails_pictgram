<div class="topic-new-wrapper" >
  <div class="container">
    <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <h1 class="text-center">Add Comment</h1>
        <!--ルーティングでネストを定義している時のform_for-->
        <%= form_for [@topic, @comment] do |f| %>
          <div class="form-group">
            <%= f.label :comment %>
            <%= f.text_area :content, class: 'form-control' %>
          </div>
          
          <!--ログインしてないときは非表示-->
          <% if logged_in? %>
            <%= f.submit 'コメントする', class: 'btn btn-black btn-block' %>
          <% end %>
        
        <% end %>
      </div>
    </div>
  </div>
</div>